<%= form_for @querey, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :subject, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :subject, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :"Class", :class => 'control-label' %>
    <div class="controls">
      <%= f.select(:grade,GRADE_CONSTANT::GRADE_TYPE) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :question, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :question, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :"Current answer", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :curr_ans, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :"suggested answer", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sugg_ans, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :reason, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :reason, :class => 'text_area textarea_size', :placeholder=>"Write reason here" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                books_path, :class => 'btn' %>
  </div>
<% end %>
