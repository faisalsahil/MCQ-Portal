<%- model_class = Question -%>
<div class="page-header well">
  <h4 class="span12"><%= @chapter.book.name %><%= " "%><%= @chapter.book.grade %><%= " "%><i class='icon-double-angle-right icon-white'></i><%= " "%><%= @chapter.name %></h4>
</div>

<div class="row-fluid">
  <%= link_to '<span class="text-left span1"><i class="icon-arrow-right"></i></span><strong>MCQs Questions</strong>'.html_safe, mcqsquestions_chapter_questions_path(@chapter), :class => 'btn btn-success btn-large input-block-level' %>
  <br/>
</div>

<div class="row-fluid">

  <%= link_to '<span class="text-left span1"><i class="icon-arrow-right"></i></span><strong>Short Questions</strong>'.html_safe, shortquestions_chapter_questions_path(@chapter), :class => 'btn btn-primary btn-large input-block-level' %>
  <br/>
</div>

<div class="row-fluid">
  <%= link_to '<span class="text-left span1"><i class="icon-arrow-right"></i></span><strong>Long Questions</strong>'.html_safe, '#', :class => 'btn btn-warning btn-large input-block-level' %>
  <br/>
</div>

<div class="row-fluid">
  <%= link_to '<span class="text-left span1"><i class="icon-arrow-right"></i></span><strong>Test Yourself</strong>'.html_safe, testyourself_chapter_questions_path(@chapter), :class => 'btn btn-danger btn-large input-block-level' %>
